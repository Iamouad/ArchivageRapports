

@{
    ViewBag.Title = "UploadReport";
}

<h2>UploadRepport</h2>

@using (Html.BeginForm("uploadFile",
                        "Student",
                        FormMethod.Post,
                        new { id = "uploadForm", enctype = "multipart/form-data" }
                       ))
{


    <div class="form-group">
        <label for="file">Sujet :</label>
        <input class="form-control" type="text" name="sujet" id="sujet" />
    </div>
    <div class="form-group">
        <label for="searchBy">Type</label>
        @Html.DropDownList("Id_Type", ViewBag.type as SelectList, "selectionner le Type", new { @class = "form-control", name = "type", id = "selectedType" })
    </div>
    <div class="form-group">
        <label for="file">Upload repport:</label>
        <input class="form-control" type="file" name="file" id="file" />
    </div>
    <input class="btn btn-primary" type="submit" value="Upload Report" />
    <input type="number" name="idGrp" value="@ViewBag.idGrp" hidden />


    @ViewBag.Id_filiere
    @ViewBag.Id_niv
    @ViewBag.Id_prof
    @ViewBag.Id_type
    @ViewBag.Sujet
    @ViewBag.ReportPath
    @ViewBag.exist
    @ViewBag.Message
    <a href=" @ViewBag.path">View</a>
}
